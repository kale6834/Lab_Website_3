<% include ../partials/header %>
    <% include ../partials/menu %>
        <div class="container">
            <br>
            <div class="row">
                <div class="col-4">
                    <div class="card">
                        <!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
                        <%
				  var image_src = '../resources/img/helmet.jpg';
​
				  %>
                            <img class="card-img-top" id="player_img" src="<%- image_src %>" alt="Image of Football Player">
                            <div class="card-body mx-auto">
                                <form class="form" action="/player_info/post" method="get">
                                    <select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 <!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id,
										 but will display the player's name-->
										 <%
 										if (players) {
 											var options = '';
 											players.forEach(function(item){
												 options += "<option value" + "=" + item.id + ">" + item.name + "</option>"
 											}); %>
 										<%- options %>
 										<% } %>
						</select>
                                </form>
                            </div>
                    </div>
                </div>
                <div class="col-8">
                    <div class="table-responsive">
                        <table class="table">
                            ​
                            <tr>
                                <th>Name</th>
                                <td>
                                    <% if(players){
												var names = player_info.name;
												} %>
                                        <%- names %>
                                </td>
                            </tr>
                            ​ ​ ​
                            <tr>
                                <!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
                                <th>Year</th>
                                <td>
                                    <% if(player_info){
										var year = player_info.year;
									} %>
                                        <%- year %>
                                </td>
                            </tr>
                            <tr>
                                <th>Major</th>
                                <td>
                                    <% if(player_info){
									var major = player_info.major;
								} %>
                                        <%- major %>
                                </td>
                            </tr>
                            ​
                            <tr>
                                <th>Games Played</th>
                                <td>
                                    <% if(games){
									var num_games = 0;
									for(x=0; x < games.length; x++){
										num_games += 1;
									}
								} %>
                                        <%- num_games %>
                                </td>
                            </tr>
                            <tr>
                                <td>Passing Yards:
                                    <% if(player_info){
									var p_yards = player_info.passing_yards;
									var avg_pass = Math.floor(p_yards / num_games);
								} %>
                                        <%- p_yards %>
                                </td>
                                <td>Avg. Passing Yards:
                                    <%- avg_pass %>
                                </td>
                            </tr>
                            <tr>
                                <td>Rushing Yards:
                                    <% if(player_info){
									var rush_yards = player_info.rushing_yards;
									var avg_rush = Math.floor(rush_yards / num_games);
								} %>
                                        <%- rush_yards %>
                                </td>
                                <td>Avg. Rushing Yards:
                                    <%- avg_rush%>
                                </td>
                            </tr>
                            <tr>
                                <td>Receiving Yards:
                                    <% if(player_info){
									var rec_yards = player_info.receiving_yards;
									var avg_rec = Math.floor(rec_yards / num_games);
								} %>
                                        <%- rec_yards %>
                                </td>
                                <td>Avg. Receiving Yards:
                                    <%- avg_rec%>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        ​
        <% include ../partials/footer %>